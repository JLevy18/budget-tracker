<AppBar>:
    orientation: "horizontal"
    height: 30
    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, 1
        width: self.minimum_width

        HoverableButton:
            text: "File"
            size_hint: None, 1
            width: 60
            hover_color: app.hex_to_rgba("#2B4257")
            on_release: root.file_dropdown.open(self)
        HoverableButton:
            text: "Help"
            size_hint: None, 1
            width: 60
            hover_color: app.hex_to_rgba("#2B4257")
            on_release: root.help_dropdown.open(self)

    Label:
        id: title_bar
        text: "Budget Tracker"
        size_hint: 1, 1
        halign: 'center'
        valign: 'middle'
        text_size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, 1
        width: self.minimum_width

        HoverableButton:
            text: "\uE15B"
            size_hint: None, 1
            width: 40
            font_name: app.font_path
            hover_color: app.hex_to_rgba("#2B4257")
            on_release: app.minimize_window()

        HoverableButton:
            text: "\uE835"
            size_hint: None, 1
            width: 40
            font_name: app.font_path
            hover_color: app.hex_to_rgba("#2B4257")
            on_release: app.maximize_window()

        HoverableButton:
            text: "\uE5CD"
            size_hint: None, 1
            width: 40
            font_name: app.font_path
            hover_color: app.hex_to_rgba("#2B4257")
            on_release: app.close_window()
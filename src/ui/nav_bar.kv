<NavBar>:
    anchor_x: "center"
    anchor_y: "center"
    AnchorLayout:
        size_hint: None,0.5
        BoxLayout:
            orientation: "horizontal"
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                HoverableButton:
                    text: "\uef3e"  # Minimize icon
                    size_hint: None, None
                    font_size: "32sp"
                    size: 32, 32
                    font_name: app.font_path_extralight
                    change_cursor_on_hover: True
                    hover_callback: app.change_font_path_callback
                    on_press: app.switch_screen("dashboard")
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                Label:
                    text: "\u2022"  # Minimize icon
                    size_hint: None, None
                    font_size: "32sp"
                    size: 32, 32
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                HoverableButton:
                    text: "\uef63"  # Minimize icon
                    size_hint: None, None
                    font_size: "32sp"
                    size: 32, 32
                    font_name: app.font_path_extralight
                    change_cursor_on_hover: True
                    hover_callback: app.change_font_path_callback
                    on_press: app.switch_screen("transaction")
<NavBar>:
    anchor_x: "center"
    anchor_y: "top"
    AnchorLayout:
        size_hint: None,0.5
        width: 150
        BoxLayout:
            orientation: "horizontal"
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                HoverableButton:
                    id: dashboard_button
                    text: "\uef3e"
                    size_hint: None, None
                    font_size: "32sp"
                    size: 32, 32
                    font_name: app.font_path_extralight
                    change_cursor_on_hover: True
                    hover_callback: lambda widget, state: self.change_font_path_callback(root, widget, state)
                    on_press: root.select_button(self); app.switch_screen("dashboard")
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                Label:
                    markup: True
                    text: "[color=#C7C7C7]\u2022[/color]"
                    size_hint: None, None
                    font_size: "32sp"
                    size: 32, 32
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                HoverableButton:
                    text: "\uef63"
                    size_hint: None, None
                    font_size: "32sp"
                    size: 32, 32
                    font_name: app.font_path_extralight
                    change_cursor_on_hover: True
                    hover_callback: lambda widget, state: self.change_font_path_callback(root, widget, state)
                    on_press: root.select_button(self); app.switch_screen("transaction")
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                Label:
                    markup: True
                    text: "[color=#C7C7C7]\u2022[/color]"
                    size_hint: None, None
                    font_size: "32sp"
                    size: 32, 32
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                HoverableButton:
                    text: "\ue8b8"
                    size_hint: None, None
                    font_size: "32sp"
                    size: 32, 32
                    font_name: app.font_path_extralight
                    change_cursor_on_hover: True
                    hover_callback: lambda widget, state: self.change_font_path_callback(root, widget, state)
                    on_press: root.select_button(self); app.switch_screen("settings")
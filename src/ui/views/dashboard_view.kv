<DashboardView>:
    orientation: 'horizontal'
    padding: [20,20,20,20]
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.4, 1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.55
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "top"
                id: radial_budget_progress
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.45
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                id: monthly_spending_summary
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.6, 1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.45
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                id: budget_category_pie_chart
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                id: actual_category_pie_chart
        BoxLayout:
            padding: [20,20,0,0]
            size_hint_y: 0.5
            id: budget_view
            
<DashboardView>:
    orientation: 'horizontal'
    padding: [10,10,10,10]
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.35, 1
        BoxLayout:
            padding: [10,10,0,0]
            orientation: 'horizontal'
            size_hint_y: 0.55
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "top"
                id: radial_budget_progress
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.45
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                id: monthly_spending_summary
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.65, 1
        BoxLayout:
            orientation: 'vertical'
            FloatLayout:
                size_hint_y: 0
                Label:
                    text: "Category Breakdown"
                    font_size: 22
                    bold: True
                    color: 1, 1, 1, 1
                    pos_hint: {"center_x": 0.62, "center_y": 0.01}
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.6, 1
                    
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    size_hint: 1,1
                    id: budget_category_pie_chart
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    size_hint: 1,1
                    id: actual_category_pie_chart
        BoxLayout:
            padding: [0,20,0,0]
            size_hint: 1,1
            id: budget_view
            
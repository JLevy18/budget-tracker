<DashboardView>:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.33, 1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.05
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.65
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.4
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.66, 1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.05
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.45
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                id: budget_pie_chart
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                id: actual_pie_chart
        BoxLayout:
            padding: [0,20,0,10]
            size_hint_y: 0.5
            id: budget_view
            